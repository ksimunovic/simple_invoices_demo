<%= form_with model: invoice, scope: :invoice, local: false, id: "invoice_form" do |form| %>
  <% if @invoice&.errors&.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from saving:</h2>
      <ul>
        <% @invoice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :client_name %>
    <%= form.text_field :client_name %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, min: 0.01, step: '0.01' %>
  </div>

  <div>
    <%= form.label :tax %>
    <%= form.number_field :tax, min: 0.01, step: '0.01' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>